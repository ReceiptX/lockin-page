# Server
PORT=8787

# SQLite database file path
DB_PATH=./data/lockin.db

# License binding behavior
# If true: first successful validation binds the license to the requesting Origin host.
AUTO_BIND_DOMAIN=true

# CORS
# Use * for any origin (recommended for client-side script validation).
CORS_ALLOW_ORIGIN=*

# Rate limiting (very lightweight)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120
